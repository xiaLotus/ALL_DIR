<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- ✅ 將沒有副檔名的 URL 自動導向對應的 .html 檔案 -->
        <rule name="RemoveHTML" stopProcessing="true">
          <match url="^([_0-9a-zA-Z\-]+)$" />
          <conditions>
            <add input="{REQUEST_FILENAME}.html" matchType="IsFile" />
          </conditions>
          <action type="Rewrite" url="{R:1}.html" />
        </rule>

        <!-- ✅ 預設導向 login.html（首頁） -->
        <rule name="DefaultToLogin" stopProcessing="true">
          <match url="^$" />
          <action type="Rewrite" url="login.html" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>